<div class="text-center">
    <h1>Mon blog</h1>
</div>
<div class="container">
  <div class="row">
      <% @articles.each do |article| %>
    <div class="col-12">
          <%= link_to article_path(article.id) do %>
        <div class="shadow bg-white rounded p-4 d-flex justify-content-between">
          <h2><%= article.title %> - <%= "⭐" * article.stars %></h2>
            <p><b><%= article.created_at.strftime("%D") %></b></p>
        </div>
    </div>
      <% end %>
  </div>

      <% end %>

</div>
<div class="text-center">
            <%= link_to "nouvel article", new_article_path, class: "btn btn-primary" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>
</div>

